%head
  <!--<![endif]-->
  %meta{ :charset => "utf-8" }

  %meta{name: "viewport", content: "initial-scale=1.0,user-scalable=no,maximum-scale=1.0"}
  %meta{name: "apple-mobile-web-app-capable", content: "yes"}
  %link{rel: "apple-touch-icon", href: "/assets/conditions.png"}
  %link{rel: "apple-touch-icon", sizes: "114x114", href: "/assets/conditions@2x.png"}
  %link{rel: "shortcut icon", href: "/assets/conditions.png"}

  %title= content_for?(:title) ? yield(:title) : "Untitled"

  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tag

%body
  #header
    .content
      .title
        %h1= yield :title
      .date
        = Date.today.to_s(:long)

  .content
    = yield
